JS

function removeArrayElement() {
  let arr = document.getElementById("arrayInput").value.split(",");
  let element = document.getElementById("elementToRemove").value.trim();

  let index = arr.indexOf(element);

  if (index !== -1) {
    arr.splice(index, 1); // removes element
    document.getElementById("result").innerHTML = "Updated Array: " + arr.join(", ");
  } else {
    document.getElementById("result").innerHTML = "Element Not Found!";
  }

  console.log(arr);
  alert(arr);
}

